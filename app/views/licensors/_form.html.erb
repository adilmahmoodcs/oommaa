      <ul>
      <% licensor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :main_contact_email %>
    <%= f.email_field :main_contact, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :logo %>
    <% if f.object.logo? %>
      <br>
      <%= image_tag f.object.logo.url(:thumb), width: "100px" %>
    <% end %>
    <%= f.file_field :logo, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
