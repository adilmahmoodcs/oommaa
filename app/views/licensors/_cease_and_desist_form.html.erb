<%= nested_form_for @email_templates, url: send_cease_and_desist_email_licensor_path(@licensor), method: :post, html: {id: 'cease_and_desist_form'} do |f| %>

  <div class="row">
    <%= render "email_form", {f: f} %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class= "note form-group">
        <span>Use these tags to fill Brand's Logo related information in the below template</span>
        <br></br>
        <ul>
          <li>[TRADEMARK_REGISTRATION_NUMBER]</li>
          <li>[TRADEMARK_REGISTRATION_LOCATION]</li>
          <li>[TRADEMARK_REGISTRATION_CATEGORY]</li>
          <li>[TRADEMARK_REGISTRATION_URL]</li>
        </ul>
        <br>
        <span>* Only these fields will be used for automated population of data.</span>
      </div>
      <div class="form-group">
        <%= f.label :text %>
        <%= f.cktext_area :text, ckeditor: {toolbar: 'mini' }, required: true  %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 pull-right">
      <%= button_tag(type: 'submit', name: 'commit', value: 'send_email', class: 'btn btn-success') do %>
        <%= icon("send") %>
        Send Email
      <% end %>

      <%= button_tag(type: 'submit', name: 'commit', value: 'save', class: 'btn btn-primary pull-right') do %>
        <%= icon("save") %>
        Draft This Template
      <% end %>
    </div>
  </div>

<% end %>
