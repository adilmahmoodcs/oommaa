<h1>Licensors</h1>

<%= paginate @licensors %>

<%= form_for Licensor.new, html: { class: "form-inline" } do |f| %>
  <%= f.text_field :name,
                   class: "form-control fast-add-form mb-2 mr-sm-2 mb-sm-0",
                   placeholder: "Name" %>
  <%= f.button class: "btn btn-primary" do %>
    <%= icon("plus") %>
    Add New
  <% end %>
<% end %>

<br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name_case_insensitive, "Name") %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @licensors.each do |licensor| %>
      <tr>
        <td><%= licensor.name %></td>
        <td class="text-right">
          <%= link_to edit_licensor_path(licensor),
                      class: "btn btn-secondary btn-sm" do %>
            <%= icon("pencil") %>
            Edit
          <% end %>
          <%= link_to licensor,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-danger btn-sm" do %>
            <%= icon("trash") %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @licensors %>
