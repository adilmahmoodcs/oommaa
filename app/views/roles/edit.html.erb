<section class="box-typical box-panel">
  <header class="box-typical-header">
    <div class="tbl-row">
      <div class="tbl-cell tbl-cell-title">
        <h3>Editing Role</h3>
      </div>
    </div>
  </header>
  <div class="box-typical-body">
    <%= render 'form', role: @role %>
  </div>
</section>


<div class="clearfix"></div>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, roles_path, class: "btn btn-default" %>
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete role...".html_safe, @role, method: :delete, data: { confirm: "Are you sure you want to delete this role?" }, class: "btn btn-danger" %>
</div>
