<% content_for :page_title do %>
Edit Role - 
<% end %>
<div class="container">
<div class="page-header">
<h1>Editing Role</h1>
</div>

<%= render 'form', role: @role %>

<div class="clearfix"></div>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, @role, class: "btn btn-default" %>
</div>
<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete role...".html_safe, @role, method: :delete, data: { confirm: "Are you sure you want to delete this role?" }, class: "btn btn-danger" %>
</div>
</div>
