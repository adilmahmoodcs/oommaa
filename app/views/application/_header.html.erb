<header class="site-header">
  <div class="container-fluid">
    <div class="logo-holder">
      <%= link_to image_tag(logo_path, height: "40px", class: "d-inline-block"),
                  root_path,
                  class: "site-logo" %>
    </div>
    <button class="hamburger hamburger--htla">
      <span>toggle menu</span>
    </button>

    <% if current_user %>
      <div class="site-header-content mobile-tab-none">
        <div class="site-header-content-in">
          <div class="site-header-shown">
            <div class="dropdown user-menu">
                <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.email %>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to employee_path(current_user.employee.id),
                      class: "dropdown-item user-actionn" do %>
                        <span class="font-icon glyphicon glyphicon-user"></span>
                        Profile
                      <% end %>
                    </li>
                    <li>
                      <%= link_to destroy_user_session_path,
                                method: :delete,
                                class: "dropdown-item user-action" do %>
                        <span class="font-icon glyphicon glyphicon-log-out"></span>
                        Logout
                      <% end %>
                    </li>
                  <% end %>
                </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</header>
