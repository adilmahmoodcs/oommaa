<header class="site-header">
  <div class="container-fluid">
    <div class="logo-holder">
      <%= link_to image_tag(logo_path, height: "40px", class: "d-inline-block"),
                  root_path,
                  class: "site-logo" %>
      <% unless current_user.admin?%>
        <h4><%= current_user.licensor.name %></h4>
        <div class="sub-logo">
          <span>Powered By CounterFind</span>
          <%= image_tag("counterfind-logo-sm.png") %>
        </div>
      <% end %>
    </div>
    <button class="hamburger hamburger--htla">
      <span>toggle menu</span>
    </button>

    <% if current_user %>
      <div class="site-header-content">
        <div class="site-header-content-in">
          <div class="site-header-shown">
            <div class="dropdown user-menu">
                <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= image_tag "startui/avatar-2-64.png" %>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                    <% if user_signed_in? %>
                      <%= link_to destroy_user_session_path,
                                  method: :delete,
                                  class: "dropdown-item user-action" do %>
                        <span class="font-icon glyphicon glyphicon-log-out"></span>
                        Logout
                      <% end %>
                    <% end %>
                    <a class="dropdown-item" href="#"></a>
                </div>
            </div>
          </div>
          <% if user_signed_in? %>
            <div class="site-header-shown">
              <%= current_user.email %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</header>
