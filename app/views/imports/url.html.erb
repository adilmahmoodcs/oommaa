<section class="box-typical box-panel col-xl-9">
  <header class="box-typical-header">
    <div class="tbl-row">
      <div class="tbl-cell tbl-cell-title">
        <h3>Add new Facebook Ad URL</h3>
      </div>
    </div>
  </header>
  <div class="box-typical-body">
    <%= form_tag create_from_url_imports_path do %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= label_tag :url, "URL address" %>
            <%= text_field_tag :url, nil, class: "form-control", required: true %>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">
            <%= label_tag :brand_ids, "Brands" %>
            <%= select_tag :brand_ids,
                           options_from_collection_for_select(Brand.all.order("LOWER(name)"), :id, :name),
                           include_blank: true,
                           required: true,
                           multiple: true,
                           class: "form-control select2" %>
          </div>
        </div>

        <div class="col-md-2">
          <div class="form-group">
            <%= label_tag :likes, "Number of Likes" %>
            <%= number_field_tag :likes, nil, class: "form-control", required: true %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= button_tag class: "btn btn-primary" do %>
          <%= icon("plus") %>
          Add New
        <% end %>
      </div>
    <% end %>
  </div>
</section>
