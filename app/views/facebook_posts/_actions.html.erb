<% if !post.whitelisted? && !post.reported_to_facebook? %>
  <%= link_to post_change_status_path(post, :whitelisted),
              method: :post,
              class: "btn btn-success" do %>
    <%= icon("check") %>
    Approve
  <% end %>
<% end %>

<% if !post.blacklisted? && !post.reported_to_facebook? %>
  <%= link_to post_change_status_path(post, :blacklisted),
            method: :post,
            class: "btn btn-danger" do %>
    <%= icon("ban") %>
    Counterfeit
  <% end %>
<% end %>

<% if post.blacklisted? %>
  <%= link_to post_change_status_path(post, :reported_to_facebook),
              method: :post,
              class: "btn btn-info",
              target: "_blank" do %>
    <%= icon("facebook") %>
    Report to Facebook
  <% end %>
<% end %>

<% if post.blacklisted? || post.reported_to_facebook? %>
  <%= link_to "#", class: "btn btn-secondary disabled" do %>
    <%= icon("handshake-o") %>
    Report to Licensor
  <% end %>
<% end %>
