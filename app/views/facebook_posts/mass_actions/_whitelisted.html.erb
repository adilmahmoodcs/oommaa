<%= form_tag mass_change_status_facebook_posts_path, class: "whitelisted_mass_action_form" do %>
  <%= hidden_field_tag :new_status, :whitelisted %>
  <% params[:q].each do |k, v| %>
    <%= hidden_field_tag "q[#{k}]", v %>
  <% end %>
  <%= hidden_field_tag 'post_ids[]',"", class: "mass_action_ids" %>
  <%= button_tag class: "btn btn-success btn-sm report-btn mass_action_btn",
                 "data-confirm": "Selected ads will be approved. Are you sure?" do %>
    <%= icon("check", class: "fa-fw") %>
    Approve all
  <% end %>
<% end %>
