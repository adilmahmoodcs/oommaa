<%= form_tag mass_change_status_facebook_posts_path do %>
  <%= hidden_field_tag :new_status, :whitelisted %>
  <% params[:q].each do |k, v| %>
    <%= hidden_field_tag "q[#{k}]", v %>
  <% end %>

  <%= button_tag class: "btn btn-success btn-sm",
                 "data-confirm": "#{posts.total_count} posts will be approved. Are you sure?" do %>
    <%= icon("check", class: "fa-fw") %>
    Approve all posts
  <% end %>
<% end %>
