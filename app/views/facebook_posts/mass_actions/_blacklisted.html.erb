<%= form_tag mass_change_status_facebook_posts_path do %>
  <%= hidden_field_tag :new_status, :blacklisted %>
  <% params[:q].each do |k, v| %>
    <%= hidden_field_tag "q[#{k}]", v %>
  <% end %>

  <%= button_tag class: "btn btn-danger btn-sm",
                 "data-confirm": "#{posts.total_count} ads will be marked as counterfeit. Are you sure?" do %>
    <%= icon("ban", class: "fa-fw") %>
    Mark as counterfeit all ads
  <% end %>
<% end %>
