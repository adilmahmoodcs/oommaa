<%= form_tag mass_change_status_facebook_posts_path, class: "blacklisted_mass_action_form" do %>
  <%= hidden_field_tag :new_status, :blacklisted %>
  <% params[:q].each do |k, v| %>
    <%= hidden_field_tag "q[#{k}]", v %>
  <% end %>
  <%= hidden_field_tag 'post_ids[]',"", class: "mass_action_ids" %>
  <%= button_tag class: "btn btn-danger btn-sm report-btn mass_action_btn",
                 "data-confirm": "Selected ads will be marked as counterfeit. Are you sure?" do %>
    <%= icon("ban", class: "fa-fw") %>
    counterfeit all
  <% end %>
<% end %>
