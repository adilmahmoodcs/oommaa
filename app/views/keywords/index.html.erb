<h1>Keywords</h1>

<%= form_for Keyword.new, html: { class: "form-inline" } do |f| %>
  <%= f.text_field :name, class: "form-control mb-2 mr-sm-2 mb-sm-0", placeholder: "Name" %>
  <%= f.button "Add New", class: "btn btn-primary" %>
<% end %>

<br>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.name %></td>
        <td class="text-right">
          <%= link_to 'Edit',
                      edit_keyword_path(keyword),
                      class: "btn btn-secondary btn-sm" %>
          <%= link_to 'Destroy',
                      keyword,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
