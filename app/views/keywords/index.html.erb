<h1>
  Keywords
</h1>

<%= form_for Keyword.new, html: { class: "form-inline" } do |f| %>
  <div class="input-group mb-2 mr-sm-2 mb-sm-0">
    <div class="input-group-addon"><%= icon("plus") %></div>
    <%= f.text_field :name,
                     class: "form-control fast-add-form mb-2 mr-sm-2 mb-sm-0",
                     placeholder: "New keyword name" %>
  </div>
  <%= f.button class: "btn btn-primary" do %>
    <%= icon("plus") %>
    Add New
  <% end %>
<% end %>

<hr>

<%= paginate @keywords %>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name_case_insensitive, "Name") %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.name %></td>
        <td class="text-right">
          <%= link_to edit_keyword_path(keyword),
                      class: "btn btn-secondary btn-sm" do %>
            <%= icon("pencil") %>
            Edit
          <% end %>
          <%= link_to keyword,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-danger btn-sm" do %>
            <%= icon("trash") %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @keywords %>
