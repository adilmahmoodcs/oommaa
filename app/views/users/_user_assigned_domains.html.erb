<% domains.each do |domain| %>
  <li class='row col-sm-12'>
    <div class='col-sm-8'>
      <%= domain.name%>
    </div>
    <div class="col-sm-2">
      <%= link_to edit_user_path(@user),
                  class: "btn btn-danger btn-sm" do %>
        <%= icon("pencil") %>
        Remove
      <% end %>
    </div>
  </li>
<% end %>
