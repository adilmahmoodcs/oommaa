<%= form_for brand, html: { multipart: true } do |f| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :licensor_id %>
    <%= f.collection_select :licensor_id,
                            Licensor.order(:name),
                            :id,
                            :name,
                            { include_blank: true },
                            class: "form-control select2" %>
  </div>

  <div class="form-group">
    <%= f.label :nicknames %>
    <% f.object.nicknames.each do |nickname| %>
      <%= text_field_tag "brand[nicknames][]", nickname, class: "form-control" %>
    <% end %>
    <%= text_field_tag "brand[nicknames][]", nil, class: "form-control multiple-field" %>
    <%= link_to "Add another nickname", "#", class: "btn btn-sm btn-secondary add-another-field" %>
  </div>

  <div class="form-group">
    <%= f.label :logos %>
    <br>
    <div class="row">
      <%= f.fields_for :logos do |img_form| %>
        <% if img_form.object.persisted? %>
          <div class="col-xl-3">
            <%= image_tag img_form.object.image.url(:thumb), width: "100px" %>
            <div class="form-check">
              <%= img_form.label :_destroy do %>
                <%= img_form.check_box :_destroy %>
                <%= t(:delete) %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="col-xl-12">
            <br>
            <%= img_form.label :image, t(:add_new) %>
            <%= img_form.file_field :image, class: "form-control" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
