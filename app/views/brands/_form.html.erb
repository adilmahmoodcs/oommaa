<%= nested_form_for brand, html: { multipart: true } do |f| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if current_user.admin? %>
    <div class="form-group">
      <%= f.label :licensor_id %>
      <%= f.collection_select :licensor_id,
                              Licensor.order(:name),
                              :id,
                              :name,
                              { include_blank: true },
                              class: "form-control select2" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nicknames %>
    <% f.object.nicknames.each do |nickname| %>
      <%= text_field_tag "brand[nicknames][]", nickname, class: "form-control" %>
    <% end %>
    <%= text_field_tag "brand[nicknames][]", nil, class: "form-control multiple-field" %>
    <%= link_to "Add another nickname", "#", class: "btn btn-sm btn-secondary add-another-field" %>
  </div>

  <div class="form-group">
    <%= f.label :logos %>
    <br>
    <div class="row">
      <%= render "logos_form", {f: f, logo: :logos} %>
      <%= f.link_to_add "Add Logo", :logos , class: "btn btn-sm btn-primary"%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
