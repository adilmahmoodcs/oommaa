<%= form_for brand, html: { multipart: true, class: "resource-form" } do |f| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :licensor_id %>
    <%= f.collection_select :licensor_id,
                            Licensor.order(:name),
                            :id,
                            :name,
                            { include_blank: true },
                            class: "form-control select2" %>
  </div>

  <div class="form-group">
    <%= f.label :nicknames %>
    <% f.object.nicknames.each do |nickname| %>
      <%= text_field_tag "brand[nicknames][]", nickname, class: "form-control" %>
    <% end %>
    <% 4.times do %>
      <%= text_field_tag "brand[nicknames][]", nil, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :logo %>
    <% if f.object.logo? %>
      <br>
      <%= image_tag f.object.logo.url(:thumb) %>
    <% end %>
    <%= f.file_field :logo, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
