<h1>Brands</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td class="text-right">
          <%= link_to 'Edit',
                      edit_brand_path(brand),
                      class: "btn btn-secondary btn-sm" %>
          <%= link_to 'Destroy',
                      brand,
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path, class: "btn btn-primary" %>
