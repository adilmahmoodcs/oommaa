<fieldset>
  <div class="row">
    <div class="col-md-offset-2 col-md-10">
      <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
          <%= f.hidden_field :_destroy %>
          <%= link_to "Revoke", 'javascript:void(0);', class: "remove_fields btn btn-danger btn-sm pull-right" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :level, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :level, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :level_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :level_id, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :notes, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_area :notes, class: 'form-control', rows: 5 %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :confirmation, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.check_box :confirmation %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10">
          <hr/>
        </div>
      </div>

    </div>
  </div>
</fieldset>
