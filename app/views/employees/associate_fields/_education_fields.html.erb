<fieldset>
  <div class="row">
    <div class="col-md-offset-2 col-md-10">
      <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
          <%= f.hidden_field :_destroy %>
          <%= link_to "Revoke", 'javascript:void(0);', class: "remove_fields btn btn-danger btn-sm pull-right" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :degree, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :degree, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :department, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :department, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :institution, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :institution, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :thesis, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :thesis, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :still_studying, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :still_studying, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :graduation, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :graduation, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :entrance_date, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :entrance_date, class: 'form-control datetimepickerYearsMode' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :notes, class: "col-sm-2 control-label" %>
        <div class="col-sm-6">
          <%= f.text_area :notes, class: 'form-control', rows: 5 %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10">
          <hr/>
        </div>
      </div>

    </div>
  </div>
</fieldset>
