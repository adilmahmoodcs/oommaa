<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class: 'form-control', required: true %>
</div>

<div class="form-group">
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :dob, "Date of Birth" %>
  <%= f.date_field :dob, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :manager_id %><br>
    <%= f.collection_select :manager_id, User.joins(:roles).where(name: 'manager').order(:name),
                            :id, :name,
                            { include_blank: true },
                            class: "form-control select2",
                            required: false %>
</div>
