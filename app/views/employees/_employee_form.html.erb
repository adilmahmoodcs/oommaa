<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class: 'form-control', required: true %>
</div>

<div class="form-group">
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :dob, "Date of Birth" %>
  <%= f.date_field :dob, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :manager_id %><br>
    <%= f.collection_select :manager_id, User.with_manager_rights,
                            :id, :name,
                            { include_blank: true },
                            class: "form-control select2",
                            required: false %>
</div>


<h3>Visa Details</h3>
<%= f.fields_for :visa_detail do |builder| %>
  <%= render "visa_detail_fields", :f => builder %>
<% end %>

<h3>Trainings</h3>
<%= f.fields_for :trainings do |builder| %>
  <%= render "training_fields", :f => builder %>
<% end %>
<%= link_to_add_fields "Add more Trainings", f, :trainings %>
