<dir class="counterfind_ux_v2">

  <div class="inner-header">
    <div class="holder">
      <div class="row">
        <div class="col-md-12 col-lg-12">
          <div class="domain_hading_holder">
            <div class="heading-holder">
              <h3>
                <%= t(@status || :all) %>
                Domains
              </h3>
            </div>
            <%= render "new_form" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="div-table" class="mb60">
    <div class="custom_table">
      <div class="div_Table m0" id="scroll_table">
        <div class="div_TableRow mobile-none">
          <div class="div_TableHead width_33"><%= sort_link(@q, :name_case_insensitive, "Name") %></div>
          <% if @status == "blacklisted"%>
            <div class="div_TableHead width_33"><%= sort_link(@q, :owner_email, "Owner's Email") %></div>
          <% end %>
          <div class="div_TableHead width_33">Actions</div>
        </div>

        <div class="div-table-body scroll_table_body">
          <% @domains.each do |domain| %>
            <div class="div_TableRow scroll_table_data">
              <div class="div_TableCell">
                <div class="mobile_table_head desktop-none">
                  <h4>Name</h4>
                </div>
                <div class="mobile_content">
                  <%= domain.name %>
                </div>
              </div>
              <% if @status == "blacklisted"%>
                <div class="div_TableCell">
                  <div class="mobile_table_head desktop-none">
                    <h4>Affiliate Name</h4>
                  </div>
                  <div class="mobile_content affiliate_page_name">
                    <span> <%= domain.owner_email %> </span>
                    <%= render "edit_form", domain: domain %>
                  </div>
                </div>
              <% end %>
              <div class="div_TableCell">
                <div class="mobile_table_head desktop-none">
                  <h4>Actions</h4>
                </div>
                <div class="mobile_content">
                  <%= render "actions", domain: domain %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </dir>
  <div class="hide">
    <%= paginate @domains %>
  </div>
</dir>
