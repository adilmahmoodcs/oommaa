<% unless domain.whitelisted? or domain.greylisted? %>
  <%= link_to domain_change_status_path(domain, :whitelisted),
              method: :post,
              class: "btn btn-success btn-sm" do %>
    <%= icon("check") %>
    Move to Whitelist
  <% end %>
<% end %>

<% unless domain.blacklisted? or domain.greylisted? %>
  <%= link_to domain_change_status_path(domain, :blacklisted),
              method: :post,
              class: "btn btn-danger btn-sm" do %>
    <%= icon("ban") %>
    Move to Blacklist
  <% end %>
<% end %>

<%= link_to domain,
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger btn-sm" do %>
  <%= icon("trash") %>
  Delete
<% end %>
