  </head>

  <body class="horizontal-navigation">
    <%= render "header" %>
    <div class="page-content devise">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xl-12">
            <%= render "application/alerts" %>
            <div class="col-xl-4"></div>
            <section class="box-typical box-panel col-xl-4">
              <%= yield %>
            </section>
          </div>
        </div>
      </div>
    </div>
  </body>
